[Unit]
Description=Ecs Exporter
Documentation=https://prometheus.io/
After=network.target

[Service]
Type=simple
User=ecs_exporter
ExecStart=python3 /opt/ecs_exporter/ecs_exporter.py
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure
TimeoutStopSec=20s
RestartSec=10s
StartLimitInterval=30min
StartLimitBurst=3


[Install]
WantedBy=multi-user.target
